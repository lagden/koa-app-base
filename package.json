{
  "name": "@tadashi/koa-base",
  "version": "3.17.1",
  "description": "A web server with sugar",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagden/koa-app-base.git"
  },
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "coverage": "nyc --reporter=text --reporter=lcov ava",
    "pretest": "xo",
    "test": "ava"
  },
  "keywords": [
    "koa",
    "web",
    "server",
    "base",
    "app"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "engines": {
    "node": ">= 12.0.0"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0,
      "unicorn/prevent-abbreviations": 0
    }
  },
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@tadashi/koa-error": "7.0.1",
    "koa-compress": "5.0.1",
    "koa-conditional-get": "3.0.0",
    "koa-etag": "4.0.0"
  },
  "peerDependencies": {
    "koa": ">= 2.0.0 < 3.0.0"
  },
  "devDependencies": {
    "@tadashi/hex-id": "2.0.0",
    "ava": "3.15.0",
    "got": "11.8.1",
    "hash-to-port": "1.2.0",
    "nyc": "15.1.0",
    "xo": "0.37.1"
  }
}
