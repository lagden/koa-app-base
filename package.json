{
  "name": "koa-app-base",
  "version": "3.1.2",
  "description": "A web server with sugar",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagden/koa-app-base.git"
  },
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "NODE_ENV=test ava",
    "pretest-cov": "npm run pretest",
    "test-cov": "NODE_ENV=test nyc ava"
  },
  "keywords": [
    "koa2",
    "web",
    "server",
    "base",
    "app"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "engines": {
    "node": ">= 8.9.1"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0
    }
  },
  "dependencies": {
    "@tadashi/koa-error": "4.1.1",
    "kcors": "2.2.1",
    "koa": "2.5.1",
    "koa-compress": "3.0.0",
    "koa-conditional-get": "2.0.0",
    "koa-etag": "3.0.0",
    "lodash.merge": "4.6.1"
  },
  "devDependencies": {
    "ava": "0.25.0",
    "hash-to-port": "1.0.0",
    "nyc": "12.0.2",
    "supertest": "3.1.0",
    "xo": "0.21.1"
  }
}
