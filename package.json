{
  "name": "@tadashi/koa-base",
  "version": "3.11.0",
  "description": "A web server with sugar",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagden/koa-app-base.git"
  },
  "main": "index.js",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "report": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "xo",
    "test": "ava"
  },
  "keywords": [
    "koa",
    "web",
    "server",
    "base",
    "app"
  ],
  "author": "Thiago Lagden",
  "license": "MIT",
  "engines": {
    "node": ">= 8.9.1"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "semicolon": false,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": 0,
      "unicorn/prevent-abbreviations": 0
    }
  },
  "dependencies": {
    "@koa/cors": "3.0.0",
    "@tadashi/koa-error": "7.0.1",
    "koa": "2.11.0",
    "koa-compress": "3.0.0",
    "koa-conditional-get": "2.0.0",
    "koa-etag": "3.0.0"
  },
  "devDependencies": {
    "ava": "3.7.0",
    "hash-to-port": "1.1.0",
    "supertest": "4.0.2",
    "xo": "0.29.1"
  }
}
